<div class="inner-bg">
    <div class="container">

            <div class="row" style="margin-top: -20px">
              <div class="col-sm-6 col-sm-offset-3">

                <div class="form-box">
                    <div class="form-top">
                        <h3 style="color: #fff; text-align: center;">Add a New Device</h3>
                        <% if flash.has?(:message) %>
                          <p style="text-align: center; color:#f0ad4e;"><%= flash[:message] %> </p>
                        <% end %>
                    </div>

                  <div class="form-bottom">
                    <form  action="/devices" method="post" >

                      <div class="form-group">
                        <label class="sr-only" for="form-amount">Name</label>
                        <input type="text" name="name" placeholder="Name..." class="form-amount form-control" id="form-amount" required>
                      </div>

                      <div class="form-group">
                        <label class="sr-only" for="form-description">Description</label>
                        <input type="text" name="description" placeholder="Description..." class="form-username form-control" id="form-description" >
                      </div>


                      <div class="form-group">
                        <label  style="color: white; -webkit-font-smoothing: antialiased;" for="type">Select Existing Type: </label>
                        <select name="type_id">
                              <% @types.each do |type| %>
                                <option  name="type[name]" value="<%= type.id %>"><%= type.name %></option>
                              <%end%>
                              <option value="">Create New Type</option>
                        </select>
                      </div>

                      <div class="form-group" style="">
                        <input type="text" placeholder="or create a new device type here..." name="type[name]"/>
                      </div>


                        <button type="submit" class="btn btn-success">Add Device</button>
                    </form>

                  </div>
              </div>
            </div>
    </div>
</div>
