<div class="container" >
  <div class="row">
    <div class="jumbotron" style="background: white; border-radius:20px;">
      <% if flash.has?(:message) %>
        <div class="alert alert-success alert-dismissible" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <p><%= flash[:message] %> </p>
        </div>
      <% end %>
      <table class="table table-hover table-striped" >
      <tr class="info">
        <th><h3>Device Name</h3></th>
        <th><h3>Type</h3></th>
        <th><h3>Description</h3></th>
        <th><h3>Edit Device</h3></th>
      </tr>
        <% current_user.devices.each do |device| %>
          <tr style="text-align:left;">
            <td><a href="/devices/#{device.id}"><%=device.name%></a></td>
            <td><a href="/types/#{device.type.id}"><%=device.type.name%></a></td>
            <td><%=device.description%></td>
            <td><a href="/devices/#{device.id}/edit"><span class="glyphicon glyphicon-pencil"></span></a></td>
          </tr>
        <% end %>
      </table>
    </div><!-- end well -->
  </div><!-- end row -->
</div><!-- end container -->
