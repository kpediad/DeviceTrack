<div class="inner-bg">
    <div class="container">
            <div class="row" style="margin-top: -20px">
              <div class="col-sm-6 col-sm-offset-3">
                <div class="form-box">
                    <div class="form-top">
                        <h3 style="color: #fff; text-align: center;">Edit Device</h3>
                        <% if flash.has?(:message) %>
                          <p style="text-align: center; color:#f0ad4e;"><%= flash[:message] %> </p>
                        <% end %>
                    </div>
                  <div class="form-bottom">
                    <form  action="/devices/<%=@device.id%>" method="post" >
                      <input type="hidden" id="hidden" name="_method" value="patch">
                      <div class="form-group">
                        <input type="text" name="name" value="<%=@device.name%>" class="form-control" required>
                      </div>
                      <div class="form-group">
                        <input type="text" name="description" value="<%=@device.description%>" class="form-control" >
                      </div>
                      <div class="form-group">
                        <select name="type_id" class="form-control">
                              <option value="" <%='selected' if !@device.type%>>Select Existing Device Type...</option>
                              <% @types.each do |type| %>
                                <option name="type[name]" value="<%= type.id %>" <%='selected' if @device.type && @device.type.id == type.id%>><%= type.name %></option>
                              <%end%>
                        </select>
                      </div>
                      <div class="form-group" style="">
                        <input type="text" placeholder="or create a new Device Type here..." name="type[name]"/>
                      </div>
                        <button type="submit" class="btn btn-success">Edit Device</button>
                    </form>
                  </div>
              </div>
            </div>
    </div>
</div>
