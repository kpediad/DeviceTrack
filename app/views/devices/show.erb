<div class="container" style="width:400px;">
  <div class="row">
    <div class="jumbotron" style="padding-bottom: 10px; padding-top: 5px; background: white; border-radius:20px;">
      <h2>Device Details</h2>
      <h3>Name</h3>
      <p><%=@device.name%></p>
      <h3>Description</h3>
      <p><%=@device.description%></p>
      <h3>Type</h3>
      <p><%=@device.type.name%></p>
      <a href="/devices/<%=@device.id%>/edit"><span class="glyphicon glyphicon-pencil"></span> Edit Device</a>
    </div> <!-- end jumbotron -->
  </div> <!-- end row -->
  <div class="row">
    <form action="/devices/<%=@device.id%>/delete" method="post">
        <input type="hidden" id="hidden" name="_method" value="delete">
      <button type="submit" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete This Device</button>
    </form>
  </div> <!-- end row -->
</div> <!-- end container -->
